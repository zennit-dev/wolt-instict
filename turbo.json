{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "cache": false
    },
    "test:gemini": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#lint": {
      "cache": false
    },
    "outdated": {
      "cache": false,
      "interactive": true
    },
    "clean": {
      "cache": false
    }
  }
}
