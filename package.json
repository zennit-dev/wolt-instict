{
  "name": "zenncore",
  "private": true,
  "author": {
    "name": "zennit",
    "email": "zennit.dev@gmail.com",
    "url": "https://www.zennit.dev/"
  },
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=./apps/web...",
    "build:mobile": "turbo run build --filter=./apps/mobile...",
    "build:packages": "turbo build --filter=@zenncore/*",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=./apps/web...",
    "dev:mobile": "turbo run dev --filter=./apps/mobile...",
    "dev:packages": "turbo dev --filter=@zenncore/*",
    "lint": "biome check --write",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:gemini": "turbo run test:gemini",
    "outdated": "turbo run outdated && bun outdated -r",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@turbo/gen": "^2.6.1",
    "turbo": "2.6.1"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/shared/*",
      "packages/shared/config/*"
    ],
    "catalog": {
      "@hookform/resolvers": "^5.2.2",
      "@tailwindcss/postcss": "^4.1.17",
      "@types/node": "^24.10.1",
      "@types/react": "^19.2.4",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.0",
      "react-hook-form": "^7.66.0",
      "tailwindcss": "^4.1.17",
      "tsdown": "^0.16.4",
      "typescript": "^5.9.3",
      "zod": "^4.1.12"
    },
    "catalogs": {
      "mobile": {
        "@types/react": "~19.1.10",
        "expo": "^54.0.23",
        "nativewind": "^4.2.1",
        "react-native": "0.81.5",
        "react": "19.1.0"
      }
    }
  }
}
