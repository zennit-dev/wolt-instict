{
  "extends": ["@zenncore/mobile/ts-config", "expo/tsconfig.base"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "src",
    "scripts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "*.ts",
    "*.js",
    ".expo/types/**/*.ts",
    "nativewind.config.ts"
  ]
}
